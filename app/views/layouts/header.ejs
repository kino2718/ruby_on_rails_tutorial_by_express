<!doctype html>
<html lang="ja">

<head>
    <title>
        <%= fullTitle(title) %>
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="utf-8">
    <link rel="stylesheet" href="/stylesheets/application.css?v=1.0">
</head>

<body>
<header class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
    <div class="container">
        <!-- ブランドロゴ -->
        <a class="navbar-brand text-decoration-none" href="/" id="logo">sample app</a>

        <!-- ハンバーガーメニュー (スマホ時に表示) -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu"
            aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- メニュー -->
        <nav class="collapse navbar-collapse" id="navbarMenu">
        <ul class="navbar-nav ms-auto">
            <li class="nav-item">
                <a class="nav-link text-light" href="/">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" href="/help">Help</a>
            </li>

            <% if (hasLoggedIn) { %>
            <li class="nav-item">
                <a class="nav-link text-light" href="#">Users</a>
            </li>
            <li class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle text-light" data-bs-toggle="dropdown">
                Account
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                <li><a class="dropdown-item" href="/users/<%= currentUserId %>">Profile</a></li>
                <li><a class="dropdown-item" href="/users/<%= currentUserId %>/edit">Settings</a></li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <!-- POSTでログアウトするためformを使用 -->
                    <form action="/logout" method="POST" class="d-inline">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" autocomplete="off" />
                    <button type="submit" class="dropdown-item">Log out</button>
                    </form>
                </li>
                </ul>
            </li>
            <% } else { %>
            <li class="nav-item">
                <a class="nav-link text-light" href="/login">Log in</a>
            </li>
            <% } %>
        </ul>
        </nav>
    </div>
</header>
    <div class="container">
        <% Object.keys(flash).forEach(type => { %>
            <% flash[type].forEach(msg => { %>
                <div class="alert alert-<%= type %>"><%= msg %></div>
            <% }) %>
        <% }) %>
