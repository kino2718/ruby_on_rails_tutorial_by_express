<%- include('../layouts/header') -%>

    <h1>Reset password</h1>

    <div class="row">
        <div class="col-md-6 offset-3">
            <form action="/password_resets/<%= resetToken %>" accept-charset="UTF-8" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" autocomplete="off" />
                <input type="hidden" name="email" id="email" value="<%= user.email %>" autocomplete="off" />

                <%- include('../shared/_error_messages', { object: user }) -%>

                <%- makeFormLabel(
                    user,
                    'password',
                    'user_password',
                    'Password'
                ) %>

                <%- makeFormInput(
                    user,
                    'password',
                    'password',
                    'user[password]',
                    'user_password'
                ) %>

                <%- makeFormLabel(
                    user,
                    'passwordConfirmation',
                    'user_password_confirmation',
                    'Confirmation'
                ) %>

                <%- makeFormInput(
                    user,
                    'passwordConfirmation',
                    'password',
                    'user[passwordConfirmation]',
                    'user_password_confirmation'
                ) %>

                <input type="submit" name="commit" value="Update password" class="btn btn-primary" />
            </form>
        </div>
    </div>

<%- include('../layouts/footer') -%>
