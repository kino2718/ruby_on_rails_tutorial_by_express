<li id="micropost-<%= micropost.id %>">
  <a href="/users/<%= muser.id %>"><%- gravatarFor(muser, {size: 50}) %></a>
  <span class="user"><a href="/users/<%= muser.id %>"><%= muser.name %></a></span>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    Posted <%= timeAgoInWords(micropost.createdAt) %>
    <% if (currentUser?.id === muser?.id) { %>
      <!-- POSTでdeleteするためformを使用 -->
      <form action="/microposts/<%= micropost.id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('You sure?');">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" autocomplete="off" />
        <button type="submit" class="btn btn-link p-0 align-baseline text-decoration-none">delete</button>
      </form>
    <% } %>
  </span>
</li>
