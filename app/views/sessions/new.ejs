<%- include('../layouts/header') -%>

<h1>Log in</h1>

<div class="row">
    <div class="col-md-6 offset-3">
        <form action="/login" accept-charset="UTF-8" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" autocomplete="off" />

            <%- makeFormLabel(
                undefined,
                'email',
                'session_email',
                'Email'
            ) %>

            <%- makeFormInput(
                undefined,
                'email',
                'email',
                'session[email]',
                'session_email'
            ) %>

            <%- makeFormLabel(
                undefined,
                'password',
                'session_password',
                'Password'
            ) %>

            <a href="/password_resets/new">(forgot password)</a>

            <%- makeFormInput(
                undefined,
                'password',
                'password',
                'session[password]',
                'session_password'
            ) %>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="1" name="session[remember_me]" id="session_remember_me" >
                <label class="form-check-label" for="session_remember_me" >
                    Remember me on this computer
                </label>
            </div>

            <input type="submit" name="commit" value="Log in" class="btn btn-primary" />
        </form>

        <p>New user? <a href="/signup">Sign up now!</a></p>
    </div>
</div>

<%- include('../layouts/footer') -%>
