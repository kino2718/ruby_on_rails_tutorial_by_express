<%- include('../layouts/header'); -%>

<h1>Log in</h1>

<div class="row">
    <div class="col-md-6 offset-3">
        <form action="/login" accept-charset="UTF-8" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" autocomplete="off" />

            <%- makeFormLabel(
                undefined,
                'email',
                'session_email',
                'Email'
            ) %>

            <%- makeFormInput(
                undefined,
                'email',
                'email',
                'session[email]',
                'session_email'
            ) %>

            <%- makeFormLabel(
                undefined,
                'password',
                'session_password',
                'Password'
            ) %>

            <%- makeFormInput(
                undefined,
                'password',
                'password',
                'session[password]',
                'session_password'
            ) %>

            <input type="submit" name="commit" value="Log in" class="btn btn-primary" />
        </form>

        <p>New user? <a href="/signup">Sign up now!</a></p>
    </div>
</div>

<%- include('../layouts/footer'); -%>
